@model SchoolApp.Entities.SchoolClass

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>SchoolClass</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClassName" class="control-label"></label>
                <input asp-for="ClassName" class="form-control" />
                <span asp-validation-for="ClassName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="TeacherId" class="control-label"></label>
                @* ViewBag is a viewbag of AppUser and AppUser has DisplayName *@
                @Html.DropDownListFor(m => m.TeacherId, new SelectList(ViewBag.Teachers, "Id", "DisplayName"), "Select a Teacher")
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-2 mb-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="create-link" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}